<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SevaHetu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mukeshOtpStyle">@style/OtpWidget_OtpView</item>

    </style>



    <style name="AddressEdittext" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#C7C7C7</item>
    </style>

    <style name="AddressTextView">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#61000000</item>
    </style>

    <style name="OtpWidget_OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>