<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/rl_address_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@drawable/bg_address_list_box">

    <TextView
        android:id="@+id/tv_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/jost_medium"
        android:layout_toLeftOf="@id/iv_address_edit"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="@dimen/_14sdp" />

    <ImageView
        android:id="@+id/iv_address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_2sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:src="@drawable/ic_delete_address" />

    <ImageView
        android:id="@+id/iv_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_address_delete"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:src="@drawable/ic_edit_address" />

    <TextView
        android:id="@+id/tv_address_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_house_name"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/jost_regular"
        android:text=""
        android:textColor="#A0A0A3"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tv_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address_add"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/jost_regular"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>